---
const { isLastLesson, hasNextChapter, title, next, chapter, lesson } = Astro.props;
---
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <script src="https://accounts.google.com/gsi/client" async defer></script>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;800&display=swap" rel="stylesheet">
  <base href="/">

  <style is:global>
    *:focus {
      border-radius: 4px;
      box-shadow: rgb(0, 82, 255) 0px 0px 12px, rgb(0, 82, 255) 0px 0px 0px 1px;
      outline: 1px;
      transition: box-shadow 0.1s ease-in-out 0s;
    }

    html,
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background-color: rgb(233,233,233);
      height: calc(100vh - 64px);
    }

  .md-content-container {
    width: 100%;
    overflow: auto;
  }

  .md-content {
    width: 70%;
    margin-top: 60px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 80px;
  }

  .md-content p {
    font-weight: 300;
  }

    a.footer {
      display: block;
      padding-top: 60px;
      padding-bottom: 60px;
      color: black;
    }

    a.footer {
      border-top: solid 1px lightgray;
      background: white;
      text-decoration: none;
    }

    a.footer:visited {
      color: black;
    }

    .footer:hover h1,
    .footer:focus h1 {
      color: rgb(0,82,255);
    }

    .footer svg {
      margin-right: 20px;
    }

    .footer:hover svg,
    .footer:focus svg {
      fill: rgb(0,82,255);
    }
    
    a.footer footer {
      width: 70%;
      margin-left: auto;
      margin-right: auto;
    }

    .astro-code {
      border-radius: 10px;
      padding: 20px;
    }

    .footer-title-container {
      display: flex;
      align-items: center;
    }

    .footer-title {
      margin-bottom: 0;
    }

  .md-content img {
    width: 80%;
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 10px;
  }

  .md-content > * {
    margin-top: 50px;
    margin-bottom: 50px;
  }

  </style>
  <title>{title}</title>
</head>

<body>
  <slot name="header"></slot>
  
  <div class="master">
    <slot name="sidebar"></slot>
    <div class="md-content-container">
      <div class="md-content">
        <slot name="content"></slot>
      </div>
      {!isLastLesson && (
        <a class="footer" href={`/sw/chapter/${chapter}/lesson/${parseInt(lesson) + 1}`}>
          <footer>
            <div class="footer-title-container">
              <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 0 24 24" width="40px"><g><rect fill="none" height="24" width="24"/></g><g><path d="M22,12c0-5.52-4.48-10-10-10C6.48,2,2,6.48,2,12s4.48,10,10,10C17.52,22,22,17.52,22,12z M4,12c0-4.42,3.58-8,8-8 c4.42,0,8,3.58,8,8s-3.58,8-8,8C7.58,20,4,16.42,4,12z M16,12l-4,4l-1.41-1.41L12.17,13H8v-2h4.17l-1.59-1.59L12,8L16,12z"/></g></svg>
              <h1 class="footer-title">Next up:</h1>
            </div>
            <p>{next}</p>
          </footer>
        </a>
      )}

      {(isLastLesson && hasNextChapter) && (
        <a class="footer" href={`/sw/chapter/${parseInt(chapter) + 1}/lesson/0`}>
          <footer>
            <div class="footer-title-container">
              <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 0 24 24" width="40px"><g><rect fill="none" height="24" width="24"/></g><g><path d="M22,12c0-5.52-4.48-10-10-10C6.48,2,2,6.48,2,12s4.48,10,10,10C17.52,22,22,17.52,22,12z M4,12c0-4.42,3.58-8,8-8 c4.42,0,8,3.58,8,8s-3.58,8-8,8C7.58,20,4,16.42,4,12z M16,12l-4,4l-1.41-1.41L12.17,13H8v-2h4.17l-1.59-1.59L12,8L16,12z"/></g></svg>
              <h1 class="footer-title">Next up:</h1>
            </div>
            <p>{next}</p>
          </footer>
        </a>
      )}
    </div>
  </div>
</body>
  

</html>